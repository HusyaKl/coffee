<h1>Change</h1>
<div class="my-post">
<h1 class="my-h1"><%= @category.name %></h1>
<% if current_user.email=='nastya.admin@gmail.com'%>
<%= link_to "Удалить чат", category_path(@category), method: :delete, data: { confirm: 'Вы уверены,что хотите удалить чат?'} %>
<% end %>
<hr>
<h3>ЧАТ:</h3>
<% @category.masseges.each do |massege|%>
<p><strong><%= massege.author %></strong>: <%= massege.body %></p>
<% end %>
<hr>
<h4>Ваше сообщение:</h4>
<div class="comment">
<%= form_for([@category, @category.masseges.build]) do |f| %>
<div class="form-group">
    <%= f.label :Ник %><br />
    <%= f.text_field :author, class: "form-control", required: "required", value: current_user.email %>
  </div>
  <div class="form-group">
    <%= f.label :Текст_cсообщения %><br />
    <%= f.text_area :body, class: "form-control",rows: "3", required: "required", id: "text" %>
  </div>
    <div class="actions">
    <%= f.submit "Отправить", class: "btn btn-primary", id: "add" %>
  </div>
<% end %>
</div>
</div>