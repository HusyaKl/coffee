<h1>Change</h1>
<div class="my-form">
<h1 class="my-h1">Рецепты наших пользователей</h1>
<h3>РЕДАКТИРОВАНИЕ РЕЦЕПТА</h3>
<%= form_for @recipe do |f| %>
  <div class="form-group">
     <%= f.label :Название_рецепта %><br />
     <%= f.text_field :title, class: "form-control", required: "required" %>
  </div>
   <div class="form-group">
     <%= f.label :Способ_приготовления %><br />
     <%= f.text_field :method, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
     <%= f.label :Описание %><br />
     <%= f.text_area :summary, class: "form-control", rows: "5", required: "required" %>
  </div>
  <div class="form-group">
     <%= f.label :Процесс_приготовления %><br />
     <%= f.text_area :body, class: "form-control", rows: "10", required: "required" %>
  </div>
   <div class="actions">
    <%= f.submit "Сохранить", class: "btn btn-primary", id: "save" %>
  </div>
<% end %>
</div>