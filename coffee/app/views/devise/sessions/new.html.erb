<h1>Change</h1>
<div class="my-form">

<h2>Вход</h2>
<% if alert %>
<p class="alert alert-danger"><%= alert %></p>
<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :Пароль %><br />
    <%= f.password_field :password, autocomplete: "пароль", class: "form-control", id: "pass" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :Запомнить_меня %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти", class: "btn btn-primary", id: "Vh" %>
  </div>
<% end %>
<%= link_to "Зарегистрироваться", new_user_registration_path %>
</div>

