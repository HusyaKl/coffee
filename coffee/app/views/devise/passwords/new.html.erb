
<h1>Change</h1>
<div class="my-form">
<h2>Забыли пароль?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if notice %><p class="alert alert-danger"><%=notice%></p><% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Прислать мне инструкции" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
